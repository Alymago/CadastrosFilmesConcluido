<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="col-md-offset-3 col-md-4">
        <div class="panel panel-primary" style="margin-top:50px">
            <div class="panel-heading">Logar-se</div>
            <form action="~/Filmes/Logar" style="margin-left:10px">
                <div class="form-group">
                    <b>Login</b>
                    <input type="text" class="form-control" name="UsuarioLogin" id="UsuarioLogin" />
                </div>
                <div class="form-group">
                    <b>Senha</b>
                    <input type="password" class="form-control" name="UsuarioSenha" id="UsuarioSenha" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Entrar" />
                </div>
            </form>
        </div>
        <style>
            .panel-primary > .panel-heading {
                color: white !important;
                background-color: black !important;
                border-color: black !important;
            }
        </style>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>


